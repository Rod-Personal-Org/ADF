{
	"name": "CopyKOFData",
	"properties": {
		"activities": [
			{
				"name": "file2DB",
				"type": "Copy",
				"dependsOn": [],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [
					{
						"name": "Source",
						"value": "files//Datos.txt"
					},
					{
						"name": "Destination",
						"value": ".KofDatos"
					}
				],
				"typeProperties": {
					"source": {
						"type": "DelimitedTextSource",
						"storeSettings": {
							"type": "AzureBlobStorageReadSettings",
							"recursive": true,
							"maxConcurrentConnections": 2
						},
						"formatSettings": {
							"type": "DelimitedTextReadSettings",
							"skipLineCount": 0
						}
					},
					"sink": {
						"type": "AzureSqlSink",
						"tableOption": "autoCreate"
					},
					"enableStaging": false,
					"enableSkipIncompatibleRow": false,
					"logStorageSettings": {
						"linkedServiceName": {
							"referenceName": "KofFilesRepository",
							"type": "LinkedServiceReference"
						},
						"path": "logs"
					},
					"validateDataConsistency": true,
					"translator": {
						"type": "TabularTranslator",
						"mappings": [
							{
								"source": {
									"name": "Id",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "Id",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "desc",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "desc",
									"type": "String"
								}
							},
							{
								"source": {
									"name": "price",
									"type": "String",
									"physicalType": "String"
								},
								"sink": {
									"name": "price",
									"type": "String"
								}
							}
						],
						"typeConversion": true,
						"typeConversionSettings": {
							"allowDataTruncation": true,
							"treatBooleanAsNumber": false
						}
					}
				},
				"inputs": [
					{
						"referenceName": "SourceDataset_s1l",
						"type": "DatasetReference"
					}
				],
				"outputs": [
					{
						"referenceName": "DestinationDataset_s1l",
						"type": "DatasetReference"
					}
				]
			},
			{
				"name": "Send a failure notification",
				"type": "WebActivity",
				"dependsOn": [
					{
						"activity": "file2DB",
						"dependencyConditions": [
							"Failed"
						]
					}
				],
				"policy": {
					"timeout": "7.00:00:00",
					"retry": 0,
					"retryIntervalInSeconds": 30,
					"secureOutput": false,
					"secureInput": false
				},
				"userProperties": [],
				"typeProperties": {
					"url": "https://prod-49.eastus2.logic.azure.com:443/workflows/bb5bc06b2c66463084ab209cc8a644fe/triggers/manual/paths/invoke?api-version=2016-10-01&sp=%2Ftriggers%2Fmanual%2Frun&sv=1.0&sig=fxm1msoxUxO38uW_zoTiISSlKZzcFZmR2mSbkBY54_4",
					"method": "POST",
					"headers": {
						"Content-Type": "application/json"
					},
					"body": {
						"DataFactoryName": "@{pipeline().DataFactory}",
						"PipelineName": "@{pipeline().Pipeline}",
						"Subject": "An error has occurred!",
						"ErrorMessage": "Run ID: @{pipeline().RunId}. Please, check the logs!",
						"EmailTo": "rodrigr@microsoft.com"
					},
					"datasets": [
						{
							"referenceName": "SourceDataset_s1l",
							"type": "DatasetReference"
						}
					]
				}
			}
		],
		"annotations": []
	}
}